{
  "name": "add-test",
  "displayName": "Add Test",
  "description": "Allows for you to add a test file for a code module.",
  "version": "0.2.2",
  "engines": {
    "vscode": "^1.88.0"
  },
  "categories": [
    "Testing"
  ],
  "keywords": [
    "test",
    "test framework",
    "testing",
    "jest",
    "vitest",
    "mocha",
    "typescript",
    "javascript",
    "ts"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Morkalork/add-test"
  },
  "icon": ".public/add-test-logo.png",
  "activationEvents": [],
  "author": "Morkalork",
  "publisher": "Morkalork",
  "license": "MIT",
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Add Test",
      "properties": {
        "addTest.testFileSuffix": {
          "type": "string",
          "default": ".test",
          "description": "The suffix to add to the test file. Commonly either .test or .spec, but totally up to you!"
        },
        "addTest.testFramework": {
          "type": "string",
          "default": "",
          "description": "Currently supports vitest, jest and mocha. If set to nothing, it will be inferred from the project."
        },
        "addTest.addImports": {
          "type": "boolean",
          "default": true,
          "description": "Set this to false if you import the test modules globally and not auto generate imports."
        },
        "addTest.useCommonJS": {
          "type": "boolean",
          "default": false,
          "description": "Set this to true if you want to use CommonJS 'require' instead of ES6 'import'."
        }
      }
    },
    "typescriptServerPlugins": [
      {
        "name": "typescript-styled-plugin"
      }
    ],
    "commands": [
      {
        "command": "add-test.addTest",
        "title": "Add Test"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "when": "resourceLangId == typescript || resourceLangId == javascript",
          "command": "add-test.addTest",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "release": "vsce publish patch",
    "release-minor": "vsce package && vsce publish minor",
    "release-major": "vsce package && vsce publish major",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/vscode": "^1.88.0",
    "@typescript-eslint/eslint-plugin": "^7.7.1",
    "@typescript-eslint/parser": "^7.7.1",
    "eslint": "^8.57.0",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "@babel/parser": "^7.24.4",
    "recast": "^0.23.6",
    "zod": "^3.23.4"
  }
}
